{
  "name": "qwik-router",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/qwik-router/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/qwik-router",
        "configFile": "packages/qwik-router/vite.config.ts",
        "mode": "lib"
      }
    },
    "build.client": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/packages/qwik-router",
        "configFile": "packages/qwik-router/vite.config.ts"
      }
    },
    "build.ssr": {
      "executor": "@nx/vite:build",
      "defaultConfiguration": "preview",
      "options": {
        "outputPath": "dist/packages/qwik-router"
      },
      "configurations": {
        "preview": {
          "ssr": "src/entry.preview.tsx",
          "mode": "production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "../../coverage/packages/qwik-router"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/qwik-router"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/qwik-router/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "qwik-router:build.client",
        "mode": "ssr",
        "port": 4200
      }
    },
    "serve.debug": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node --inspect-brk ../../node_modules/vite/bin/vite.js --mode ssr --force",
        "cwd": "packages/qwik-router"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "noVerify": true,
        "push": false,
        "releaseAs": "patch",
        "postTargets": [
          "qwik-router:publish-to-npm",
          "qwik-router:push-to-github"
        ]
      }
    },
    "publish-to-npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "push-to-github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    }
  },
  "tags": []
}
